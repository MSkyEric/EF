@model  Models.Product
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div>
        <dl>
            <dt> @Html.LabelFor(m => m.Name)</dt>
            <dd> @Html.TextBoxFor(m => m.Name, new { @id = "txtName", @placeholder = "Name", @class = "form-control" })<span>@Html.ValidationMessageFor(m => m.Name)</span> </dd>
        </dl>
        <dl>
            <dt>@Html.LabelFor(m => m.Price)</dt>
            <dd>@Html.TextBoxFor(m => m.Price, new { @id = "txtPrice", @placeholder = "Price", @class = "form-control" })<span>@Html.ValidationMessageFor(m => m.Price)</span></dd>
        </dl>
        <dl>
            <dt>@Html.LabelFor(m => m.Quantity)</dt>
            <dd>@Html.TextBoxFor(m => m.Quantity, new { @id = "txtQuantity", @placeholder = "Quantity", @class = "form-control" })<span>@Html.ValidationMessageFor(m => m.Quantity)</span></dd>

        </dl>
    </div>
    <div >
        @*<p><input type="submit" value="Add" style="width:100px;height:40px;" /></p>*@
        <button type="submit" class="btn btn-default">Add</button>

        <a href="@Url.Action("Index", "Product")">Back to list</a>
    </div>
}
